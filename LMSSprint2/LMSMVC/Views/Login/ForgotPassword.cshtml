@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>

<h2>Forgot Password ??</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <hr />
        <br/>
        <div class="text-success">
            @ViewBag.Message
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">
                User Name
                @Html.TextBox("UserName", "", new { @class = "form-control" })
            </label>
        </div>

        <div class="form-group row">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-outline-primary btn-block" value="Get Reset Link"

                       onclick="location.href='<%: Url.Action("ForgotPassword" , new { UserName=UserName }) %>
            </div>
        </div>
        @*@Html.ActionLink("Forgot Password ?", "ForgotPassword", "Login", new { EmailId = emailID }, null);*@
    </div>
}