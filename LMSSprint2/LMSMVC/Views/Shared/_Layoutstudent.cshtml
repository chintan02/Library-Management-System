<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-lumen.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link rel="icon" type="image/x-icon" href="@Url.Content("~/Images/Libraryicon.png")">

    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
</head>
<body>



    <div class="navbar navbar-inverse navbar-fixed-top navbar-dark " style="height:80px;background-color:lightslategray">
        @*<div class="navbar navbar-inverse navbar-fixed-top navbar-dark bg-primary">*@
            <div class="container">
                @*<div class="nav navbar-nav navbar-left">
                        <img src="@Url.Action("UserPhotos", "Student" )" class="rounded-circle" height="48" width="48" />
                    </div>*@
                <div class="navbar-header">
                    @Html.ActionLink("Home", "StudentHome", new { StudentId = Session["StudentId"] }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Book Recommendation", "StudentBookRecommendation", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("Book Issued", "ShowBookIssue", new { area = "" }, new { @class = "navbar-brand" })
                    @*@Html.ActionLink("Logout", "Logout", new { @class = "navbar-brand" })*@
                </div>
                <div class="nav navbar-nav navbar-right">
                    <img src="@Url.Action("UserPhotos", "Student" )" class="rounded-circle" height="48" width="48" />
                </div>
                <div class="nav navbar-nav navbar-right navbar-brand">
                    Welcome @Session["StudentName"]
                </div>
                <div class="nav navbar-nav navbar-right">
                    @Html.ActionLink("Logout", "Logout", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                @*<div class="nav navbar-nav navbar-right">
                        @Html.ActionLink("Logout", "Logout", new { area = "" }, new { @class = "navbar-brand" })
                    </div>*@
            </div>
        </div>

        <div class="container col-lg-auto body-content bg-light" width="100%" height="100%">
            @RenderBody()
            @*<hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year -Library Management System Team 3</p>
                </footer>*@
        </div>

        <div class="footer">

            <p>&copy; @DateTime.Now.Year -Library Management System Team 3</p>
        </div>
        <style>
            .footer {
                position: fixed;
                left: 0;
                bottom: 0;
                width: 100%;
                background-color: dimgrey;
                color: oldlace;
                text-align: center;
            }
        </style>
        @*<style>
            .footer {
                position: fixed;
                left: 0;
