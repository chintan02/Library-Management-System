@model IEnumerable<LMSMVC.Models.Student>

@{
    ViewBag.Title = "UserModification";
    Layout = "~/Views/Shared/_Layoutlibrarian.cshtml";
}
<br />
<h2>Modification of the Users</h2>
<hr />
<br />

<table  id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead cellspacing="10">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentPassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentContact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentEmail)
            </th>
            <th>Edit User</th>
            <th>View User</th>
            <th>Revoke User</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentPassword)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentContact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentEmail)
                </td>
                <td>
                    <input style="margin:1px" type="button" class="btn btn-outline-primary btn-block" value="Edit" onclick="location.href='@Url.Action( "UserEdit", new { id = item.StudentId })'" />
                </td>
                <td>
                    <input style="margin:1px" type="button" class="btn btn-outline-dark btn-block" value="Details" onclick="location.href='@Url.Action( "UserDetails", new { id = item.StudentId })'" />
                </td>
                <td>
                    <input style="margin:1px" type="button" class="btn btn-outline-danger btn-block" value="Delete" onclick="location.href='@Url.Action("UserDelete", new { id = item.StudentId })'" />

                </td>
                @*<td>
                        @Html.ActionLink("Edit", "UserEdit", new { id = item.StudentId }) |
                        @Html.ActionLink("Details", "UserDetails", new { id = item.StudentId }) |
                        @Html.ActionLink("Delete", "UserDelete", new { id = item.StudentId })
                    </td>*@
            </tr>
        }
    </tbody>

</table>
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
<link rel="stylesheet" href="~/Content/DataTables/css/jquery.dataTables.min.css" />



<script src="~/Scripts/jquery-3.6.0.min.js" type="text/javascript"></script>
<script src="~/Scripts/DataTables/dataTables.bootstrap.min.js" type="text/javascript"></script>
<script src="~/Scripts/DataTables/jquery.dataTables.min.js" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#dtBasicExample').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>
