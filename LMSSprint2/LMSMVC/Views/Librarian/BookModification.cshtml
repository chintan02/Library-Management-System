@model IEnumerable<LMSMVC.Models.Book>

@{
    ViewBag.Title = "BookModification";
    Layout = "~/Views/Shared/_Layoutlibrarian.cshtml";
}
<br />
<h2>Modify Book Details</h2>
<hr />

<p>
    @*@Html.ActionLink("Create New", "BookAdd")*@
    <input type="button" class="btn btn-outline-dark btn-block" value="Create New Book" onclick="location.href='@Url.Action("BookAdd")'" />

</p><br/>
<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%" height="100%">
   
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookAuthor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookPublication)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookStatus)
            </th>
            <th> Edit Book</th>
            <th> View Book</th>
            <th> Remove Book</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookAuthor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookPublication)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookStatus)
                </td>
                <td>
                    <input style="margin:1px" type="button" class="btn btn-outline-primary btn-block" value="Edit" onclick="location.href='@Url.Action("BookEdit", new { id = item.BookId })'" />
                </td>
                <td>
                    <input style="margin:1px" type="button" class="btn btn-outline-dark btn-block" value="Details" onclick="location.href='@Url.Action( "BookDetails", new { id = item.BookId })'" />
                </td>
                <td>
                    <input style="margin:1px" type="button" class="btn btn-outline-danger btn-block" value="Delete" onclick="location.href='@Url.Action("BookDelete", new { id = item.BookId })'" />

                    @*@Html.ActionLink("Edit", "BookEdit", new { id = item.BookId }) |
                    @Html.ActionLink("Details", "BookDetails", new { id = item.BookId }) |
                    @Html.ActionLink("Delete", "BookDelete", new { id = item.BookId })*@
                </td>
            </tr>
        }
    </tbody>
</table>
<br />

<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
<link rel="stylesheet" href="~/Content/DataTables/css/jquery.dataTables.min.css" />



<script src="~/Scripts/jquery-3.6.0.min.js" type="text/javascript"></script>
<script src="~/Scripts/DataTables/dataTables.bootstrap.min.js" type="text/javascript"></script>
<script src="~/Scripts/DataTables/jquery.dataTables.min.js" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#dtBasicExample').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>